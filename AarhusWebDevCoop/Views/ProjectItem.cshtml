@inherits Umbraco.Web.Mvc.UmbracoTemplatePage<ContentModels.ProjectItem>
@using ContentModels = Umbraco.Web.PublishedContentModels;

@{
    Layout = "Master.cshtml";
}

<h3 class="text-center">@Umbraco.Field("projectTitle")</h3>
<div class="row">
    <div class="column">
        <img class="projectItemImage float-left" src="@Umbraco.Field("projectImage")" width="400px" height="auto" />
    </div>

    <div class="column">
        <div class="projectItemDescription">@Umbraco.Field("projectDescription")</div>
    </div>
</div>

<footer class="page-footer font-small blue pt-4 mt-4">
    <div class="projectStatus footer-copyright py-3 text-center">
        <p class="text-secondary text-sm-right">
            @umbraco.library.GetPreValueAsString(CurrentPage.GetPropertyValue<int>("projectStatus"))
        </p>
    </div>
</footer>
