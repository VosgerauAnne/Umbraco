@inherits Umbraco.Web.Macros.PartialViewMacroPage
@using Umbraco.Web

@{var items = Model.Content.Site().Children.Where("DocumentTypeAlias == \"projectsOverview\"").First().Children().Where("projectStatus.Contains(\"16\")").OrderBy("CreateDate desc").Take(10).ToArray();}

@if (items.Length > 0)
{

<div class="column frontpageColumn">
    @foreach (var item in items)
    {
        <div class="frontpageItem">
            <a href="@item.Url" class="frontpageLink">
                <img src="@item.GetPropertyValue("projectImage")" width="100%" height="100%" />
                @item.Name
            </a>
        </div>



    }
</div>

}
